{
    "name": "Planeswalker Points Exporter",
    "version": "1.0",
    "description": "Export your Planeswalker Points data as CSV",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": ["declarativeContent", "activeTab", "downloads", "<all_urls>"],
    "browser_action": {
        "default_popup": "popup.html"
    }
  }